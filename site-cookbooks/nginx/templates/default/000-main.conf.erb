	}

	location /webcam.jpg {
		satisfy any;
		allow <%= @lan_addr %>.0/24;
		allow 127.0.0.1;
		deny all;

		auth_basic "Files";
		auth_basic_user_file "/var/www/.htpasswdwebcam";
		proxy_pass http://localhost:8081/;
	}

	location /karuru/wwwmovie {
		autoindex on;
	}
